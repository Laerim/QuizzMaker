<Window x:Class="QuizzMaker.Windows.PlayGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizzMaker.Windows"
        mc:Ignorable="d"
        Title="PlayGame" Height="450" Width="800" ResizeMode="NoResize" WindowState="Maximized" Background="Black" Foreground="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.75*" />
            <RowDefinition Height="0.25*"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock TextAlignment="Center" VerticalAlignment="Center" Name="lblChrono" FontSize="72" FontWeight="Bold">
            <TextBlock.Triggers>
                
            </TextBlock.Triggers> 
            Timer</TextBlock>
        <TextBlock Grid.Row="1" VerticalAlignment="Center" TextAlignment="Center" Name="lblQuestion">Question</TextBlock>
        <StackPanel Grid.Row="2" Name="Answers" Orientation="Vertical">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button BorderThickness="1" ClipToBounds="True">Test</Button>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
